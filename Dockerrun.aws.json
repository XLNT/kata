{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
  ],
  "containerDefinitions": [
    {
      "name": "trusted-signer",
      "image": "shrugs/trusted-signer:latest",
      "essential": true,
      "memory": 128,
      "environment": [
        { "name": "PORT", "value": "3002" }
      ]
    },
    {
      "name": "kata-server",
      "image": "shrugs/kata-server:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "environment": [
        { "name": "TRUSTED_SIGNER", "value": "http://trusted-signer:3002" }
      ],
      "links": [
        "trusted-signer"
      ]
    }
  ]
}
